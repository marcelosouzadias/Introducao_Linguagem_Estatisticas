print("Exercício 3.1")
print("Verifique a precedência dos operadores da expressão:")
print()
print("Expressao: True and not False or True and False")
print(True and not False or True and False)
print("Expressao: (True and (not False)) or (True and False)")
print((True and (not False)) or (True and False))

